# TTA Production Environment Configuration Template
# Copy this file to .env.production and fill in the actual values

# Environment
ENVIRONMENT=production

# Application Settings
APP_NAME="TTA Player Experience API"
APP_VERSION="1.0.0"
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8080
RELOAD=false
LOG_LEVEL=info

# Security Settings (REQUIRED - CHANGE THESE VALUES)
JWT_SECRET_KEY=your-very-long-and-secure-jwt-secret-key-at-least-32-characters-long
JWT_ALGORITHM=HS256
ENCRYPTION_KEY=your_encryption_key_here_32_characters

# Database Configuration (REQUIRED - CHANGE THESE VALUES)
NEO4J_PASSWORD=your_secure_neo4j_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# Monitoring and Alerting (REQUIRED - CHANGE THESE VALUES)
GRAFANA_PASSWORD=your_grafana_admin_password_here
PROMETHEUS_RETENTION_DAYS=30
ALERT_WEBHOOK_URL=your_alert_webhook_url_here

# Backup Configuration (REQUIRED - CHANGE THESE VALUES)
BACKUP_S3_BUCKET=your-tta-backups-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"
COMPRESSION_ENABLED=true
ENCRYPTION_ENABLED=true

# Crisis Support Configuration
CRISIS_RESPONSE_TIMEOUT=1000
CRISIS_ESCALATION_ENABLED=true
CRISIS_WEBHOOK_URL=your_crisis_webhook_url_here

# HIPAA Compliance
HIPAA_AUDIT_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
DATA_ENCRYPTION_AT_REST=true
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Settings (REQUIRED - CHANGE THESE VALUES)
NEO4J_URL=bolt://your-neo4j-host:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-secure-neo4j-password
REDIS_URL=redis://your-redis-host:6379

# CORS Settings (REQUIRED - UPDATE FOR YOUR DOMAIN)
CORS_ORIGINS=["https://your-domain.com","https://www.your-domain.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","PATCH","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# Authentication Security Policy
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION_MINUTES=30
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Multi-Factor Authentication
MFA_ENABLED=true
MFA_ISSUER_NAME="TTA Platform"
MFA_EMAIL_ENABLED=false

# Logging
LOG_LEVEL=INFO

# Optional: Additional security headers
TRUSTED_HOSTS=["your-domain.com","www.your-domain.com"]

# Optional: Database connection pool settings
NEO4J_MAX_CONNECTION_LIFETIME=3600
NEO4J_MAX_CONNECTION_POOL_SIZE=100
NEO4J_CONNECTION_ACQUISITION_TIMEOUT=60

# Optional: Redis settings
REDIS_MAX_CONNECTIONS=20
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_KEEPALIVE=true
REDIS_SOCKET_KEEPALIVE_OPTIONS={}

# Optional: Monitoring and observability
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true

# Optional: Email settings (for MFA and notifications)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@your-domain.com

# Optional: Sentry error tracking
SENTRY_DSN=your-sentry-dsn-url

# Optional: Feature flags
FEATURE_REGISTRATION_ENABLED=true
FEATURE_MFA_REQUIRED=false
FEATURE_PASSWORD_RESET_ENABLED=true
FEATURE_ACCOUNT_DELETION_ENABLED=false
