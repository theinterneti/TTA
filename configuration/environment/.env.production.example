# Production Environment Configuration for TTA AI Agent Orchestration
# Copy this file to .env.production and update with your production values

# Application Settings
API_DEBUG=false
API_ENVIRONMENT=production
API_HOST=0.0.0.0
API_PORT=8080
API_RELOAD=false
API_LOG_LEVEL=INFO

# Security Settings
API_JWT_SECRET_KEY=your-very-strong-production-secret-key-at-least-32-characters-long
API_ACCESS_TOKEN_EXPIRE_MINUTES=30
API_MAX_LOGIN_ATTEMPTS=3
API_LOCKOUT_DURATION_MINUTES=30
API_MFA_ENABLED=true

# CORS Settings (Production domains only - NO localhost)
API_CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com,https://app.yourdomain.com

# Neo4j Database Settings
NEO4J_URL=bolt://your-neo4j-server:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-strong-neo4j-password
NEO4J_DATABASE=neo4j
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=60

# Redis Cache Settings
REDIS_URL=redis://your-redis-server:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20

# Service Connection Settings
SERVICE_CONNECTION_TIMEOUT=30
SERVICE_RETRY_ATTEMPTS=5
SERVICE_RETRY_BASE_DELAY=0.5
SERVICE_RETRY_MAX_DELAY=8.0

# Health Check Settings
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10

# Feature Flags
USE_MOCKS=false
USE_NEO4J=true
CRISIS_DETECTION_ENABLED=true
ENABLE_DOCS=false
ENABLE_REDOC=false
ENABLE_OPENAPI=false

# Monitoring and Logging
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_METRICS=true
LOG_FORMAT=json
LOG_REQUESTS=true

# Therapeutic Safety
CRISIS_HOTLINE=988
THERAPEUTIC_SAFETY_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20
