# Development Environment Configuration for TTA AI Agent Orchestration
# Copy this file to .env.development for local development

# Application Settings
API_DEBUG=true
API_ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8080
API_RELOAD=true
API_LOG_LEVEL=DEBUG

# Security Settings (Development - Less Strict)
API_JWT_SECRET_KEY=development-secret-key-change-in-production
API_ACCESS_TOKEN_EXPIRE_MINUTES=60
API_MAX_LOGIN_ATTEMPTS=10
API_LOCKOUT_DURATION_MINUTES=5
API_MFA_ENABLED=false

# CORS Settings (Development - Allow localhost)
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# Neo4j Database Settings (Local Development)
NEO4J_URL=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j
NEO4J_MAX_CONNECTION_POOL_SIZE=10
NEO4J_CONNECTION_TIMEOUT=30

# Redis Cache Settings (Local Development)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# Service Connection Settings
SERVICE_CONNECTION_TIMEOUT=10
SERVICE_RETRY_ATTEMPTS=3
SERVICE_RETRY_BASE_DELAY=0.1
SERVICE_RETRY_MAX_DELAY=2.0

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# Feature Flags (Development)
USE_MOCKS=true
USE_NEO4J=false
CRISIS_DETECTION_ENABLED=true
ENABLE_DOCS=true
ENABLE_REDOC=true
ENABLE_OPENAPI=true

# Monitoring and Logging (Development)
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_METRICS=true
LOG_FORMAT=text
LOG_REQUESTS=true

# Therapeutic Safety
CRISIS_HOTLINE=988
THERAPEUTIC_SAFETY_ENABLED=true

# Rate Limiting (Relaxed for Development)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100
