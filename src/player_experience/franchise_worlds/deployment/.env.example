# TTA Franchise World System - Production Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
NEO4J_PASSWORD=your_secure_neo4j_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# Security
JWT_SECRET_KEY=your_very_long_and_secure_jwt_secret_key_here_at_least_32_characters
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Monitoring
GRAFANA_PASSWORD=your_secure_grafana_admin_password_here

# Backup Configuration
BACKUP_S3_BUCKET=your-tta-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGINS=https://tta.yourdomain.com,https://admin.yourdomain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
MAX_CONCURRENT_SESSIONS=5

# Therapeutic Configuration
DEFAULT_THERAPEUTIC_INTENSITY=0.5
MAX_SESSION_DURATION_HOURS=4
MIN_SESSION_DURATION_MINUTES=15

# Email Configuration (for notifications)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USERNAME=noreply@yourdomain.com
SMTP_PASSWORD=your_smtp_password_here
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Sentry Configuration (for error tracking)
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Domain Configuration
DOMAIN_NAME=tta.yourdomain.com
API_BASE_URL=https://tta.yourdomain.com/api

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_GUEST_ACCESS=false
ENABLE_ANALYTICS=true
ENABLE_BACKUP=true

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=30
KEEP_ALIVE=2

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=100

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_TYPES=json,txt,csv

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=30

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/tta-franchise.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Database Connection Pools
NEO4J_MAX_CONNECTIONS=50
REDIS_MAX_CONNECTIONS=20
DB_POOL_TIMEOUT=30

# Backup Schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"

# API Versioning
API_VERSION=v1
API_PREFIX=/api/v1

# Therapeutic Safety
CRISIS_DETECTION_ENABLED=true
CRISIS_INTERVENTION_CONTACT=crisis@yourdomain.com
EMERGENCY_CONTACT_PHONE=+1-800-CRISIS-1

# Content Moderation
CONTENT_MODERATION_ENABLED=true
PROFANITY_FILTER_ENABLED=true
INAPPROPRIATE_CONTENT_REPORTING=true

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90
USER_TRACKING_ENABLED=false  # GDPR compliance

# Compliance
GDPR_COMPLIANCE=true
HIPAA_COMPLIANCE=true
DATA_RETENTION_DAYS=2555  # 7 years for therapeutic data
AUDIT_LOGGING_ENABLED=true
