# Production Environment Configuration
ENVIRONMENT=production
API_DEBUG=false
API_RELOAD=false
API_LOG_LEVEL=INFO

# Server settings
API_HOST=0.0.0.0
API_PORT=8080

# Security settings (MUST be overridden with secure values)
API_JWT_SECRET_KEY=${JWT_SECRET_KEY}
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database settings (MUST be overridden with production values)
API_REDIS_URL=${REDIS_URL}
API_NEO4J_URL=${NEO4J_URL}
API_NEO4J_USERNAME=${NEO4J_USERNAME}
API_NEO4J_PASSWORD=${NEO4J_PASSWORD}

# CORS settings (MUST be configured for production domains)
API_CORS_ORIGINS=${CORS_ORIGINS}

# Rate limiting (strict for production)
API_RATE_LIMIT_CALLS=100
API_RATE_LIMIT_PERIOD=60

# Therapeutic settings
API_CRISIS_DETECTION_ENABLED=true
API_CRISIS_HOTLINE=988

# Performance settings
API_WORKERS=4
API_MAX_CONNECTIONS=1000
API_KEEPALIVE_TIMEOUT=5

# Monitoring
API_METRICS_ENABLED=true
API_HEALTH_CHECK_INTERVAL=30