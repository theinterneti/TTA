# Staging Environment Configuration
ENVIRONMENT=staging
API_DEBUG=false
API_RELOAD=false
API_LOG_LEVEL=INFO

# Server settings
API_HOST=0.0.0.0
API_PORT=8080

# Security settings
API_JWT_SECRET_KEY=${JWT_SECRET_KEY:-staging-secret-key-change-me}
API_ACCESS_TOKEN_EXPIRE_MINUTES=45

# Database settings
API_REDIS_URL=${REDIS_URL:-redis://redis:6379}
API_NEO4J_URL=${NEO4J_URL:-bolt://neo4j:7687}
API_NEO4J_USERNAME=${NEO4J_USERNAME:-neo4j}
API_NEO4J_PASSWORD=${NEO4J_PASSWORD:-password}

# CORS settings
API_CORS_ORIGINS=${CORS_ORIGINS:-http://localhost:3000,https://staging.tta.example.com}

# Rate limiting (moderate for staging)
API_RATE_LIMIT_CALLS=200
API_RATE_LIMIT_PERIOD=60

# Therapeutic settings
API_CRISIS_DETECTION_ENABLED=true
API_CRISIS_HOTLINE=988

# Performance settings
API_WORKERS=2
API_MAX_CONNECTIONS=500
API_KEEPALIVE_TIMEOUT=5

# Monitoring
API_METRICS_ENABLED=true
API_HEALTH_CHECK_INTERVAL=30
