# =============================================================================
# TTA Frontend Environment Configuration Template
# =============================================================================
# Copy this file to .env and update with your actual values
# This file should be committed to version control as a template
# =============================================================================

# =============================================================================
# API CONFIGURATION
# =============================================================================
REACT_APP_API_URL=http://localhost:8080
REACT_APP_WS_URL=http://localhost:8080
REACT_APP_API_TIMEOUT=30000

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
NODE_ENV=development

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
REACT_APP_JWT_STORAGE_KEY=tta_access_token
REACT_APP_REFRESH_TOKEN_KEY=tta_refresh_token
REACT_APP_TOKEN_REFRESH_THRESHOLD=300000

# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================
REACT_APP_DEBUG=true
REACT_APP_ENABLE_3D_DEBUG=false

# =============================================================================
# NEXUS CODEX CONFIGURATION
# =============================================================================
REACT_APP_NEXUS_POLL_INTERVAL=30000
REACT_APP_SPHERE_UPDATE_INTERVAL=5000
REACT_APP_MAX_SPHERES_RENDER=50

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_3D_QUALITY=high

# =============================================================================
# MODEL MANAGEMENT FRONTEND
# =============================================================================
REACT_APP_ENABLE_MODEL_MANAGEMENT=true
REACT_APP_MODEL_SELECTOR_ENABLED=true
REACT_APP_SHOW_MODEL_PERFORMANCE=true

# =============================================================================
# UI MODE CONFIGURATION (Entertainment-First Design)
# =============================================================================
# Default UI mode for new users (entertainment/clinical)
REACT_APP_DEFAULT_UI_MODE=entertainment

# Allow users to toggle between modes
REACT_APP_ALLOW_MODE_TOGGLE=true

# Enable/disable specific modes
REACT_APP_ENTERTAINMENT_MODE_ENABLED=true
REACT_APP_CLINICAL_MODE_ENABLED=true

# Show mode toggle UI in settings
REACT_APP_SHOW_MODE_TOGGLE_UI=true

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env in the same directory
# 2. Update API URLs to match your backend configuration
# 3. Adjust performance settings based on your hardware
# 4. Enable/disable features as needed for development